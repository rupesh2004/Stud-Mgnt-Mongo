<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Information</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <h1 class="text-center bg-secondary text-light">Student Information</h1>
        <div class="row align-items-start">
            <div class="col-4">
                <form method="post" action="/submit">
                    <div class="mb-3">
                        <label for="idInput" class="form-label text-dark">ID</label>
                        <input type="number" class="form-control" id="idInput" placeholder="ID" name="id" required>
                    </div>
                    <div class="mb-3">
                        <label for="nameInput" class="form-label text-dark">Name</label>
                        <input type="text" class="form-control" id="nameInput" placeholder="Name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="mobileInput" class="form-label text-dark">Mobile</label>
                        <input type="number" class="form-control" id="mobileInput" placeholder="Mobile" name="mobile" required>
                    </div>
                    <div class="mb-3">
                        <label for="addressTextarea" class="form-label">Address</label>
                        <textarea class="form-control" id="addressTextarea" rows="3" placeholder="Enter Address" name="address" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="cityDropdown" class="form-label">City</label>
                        <select class="form-select" id="cityDropdown" name="city" required>
                            <option value="Miraj">Miraj</option>
                            <option value="Kolhapur">Kolhapur</option>
                            <option value="Sangli">Sangli</option>
                        </select>
                    </div>

                    <label for="hobbies" class="form-label">Hobbies</label><br>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Reading" id="hobbyReading" name="hobbie[]">
                        <label class="form-check-label" for="hobbyReading">Reading</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Playing Tabala" id="hobbyTabala" name="hobbie[]">
                        <label class="form-check-label" for="hobbyTabala">Playing Tabala</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Swimming" id="hobbySwimming" name="hobbie[]">
                        <label class="form-check-label" for="hobbySwimming">Swimming</label>
                    </div>

                    <label for="gender" class="form-label">Gender</label><br>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gender" id="genderMale" value="Male" required>
                        <label class="form-check-label" for="genderMale">Male</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gender" id="genderFemale" value="Female" required>
                        <label class="form-check-label" for="genderFemale">Female</label>
                    </div>

                    <input type="submit" class="btn btn-primary mt-3" name="submit" value="Add Student">
                </form>
            </div>
            <div class="col">
                <table class="table table-bordered border-dark">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Mobile</th>
                            <th scope="col">Address</th>
                            <th scope="col">City</th>
                            <th scope="col">Hobbies</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Operations</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% students.forEach(function(student) { %>
                            <tr>
                                <td><%= student.id %></td>
                                <td><%= student.name %></td>
                                <td><%= student.mobile %></td>
                                <td><%= student.address %></td>
                                <td><%= student.city %></td>
                                <td><%= student.hobbie.join(', ') %></td>
                                <td><%= student.gender %></td>
                                <td>
                                    <a href="/update/<%= student._id %>" class="btn btn-warning btn-sm">Update</a>
                                    <form method="post" action="/delete/<%= student._id %>" style="display:inline;">
                                        <br>
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
