<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Information</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />

    <style>
       body {
      font-family: 'Arial', sans-serif;
      background-color: #f0f2f5;
    }

    .navbar-brand {
      font-weight: bold;
      font-size: 1.5rem;
      color: #ffdf00 !important;
    }

    .nav-link {
      font-size: 1.1rem;
      color: #ffffff !important;
      position: relative;
      transition: color 0.3s ease-in-out;
    }

    .nav-link:hover {
      color: #ffdf00 !important;
    }

    .nav-link:hover::after {
      content: '';
      position: absolute;
      width: 100%;
      height: 2px;
      background-color: #ffdf00;
      left: 0;
      bottom: -5px;
      transition: width 0.3s;
    }

    .nav-link i {
      margin-right: 8px;
      color: #ffdf00;
    }

    .nav-link:hover i {
      color: #ffffff;
    }

    /* Dropdown on Hover with Animation */
    .nav-item.dropdown:hover .dropdown-menu {
      display: block;
      animation: fadeIn 0.3s ease-in-out;
    }

    .nav-item.dropdown:hover .nav-link {
      color: #ffdf00 !important;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Dropdown Item Hover */
    .dropdown-item:hover {
      background-color: black;
      color: #ffdf00;
    }


      .table-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #ffffff; /* White background for the table */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
      }

      .table {
        width: auto;
      }

      .table thead {
        background-color: #343a40;
        color: white;
      }

      .table tbody tr {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.5s ease, transform 0.5s ease;
      }

      .table tbody tr.visible {
        opacity: 1;
        transform: translateY(0);
      }

      .btn {
        margin: 2px 0;
        transition: background-color 0.3s, transform 0.2s, box-shadow 0.2s;
      }

      .btn:hover {
        transform: scale(1.1);
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
      }

      .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
      }

      .btn-warning:hover {
        background-color: #e0a800;
        border-color: #d39e00;
      }

      .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
      }

      .btn-primary:hover {
        background-color: #0069d9;
        border-color: #0062cc;
      }

      .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
      }

      .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
      }

      .container-fluid {
        margin-top: 30px;
      }

      h1 {
        margin-bottom: 20px;
        color: #343a40;
        font-weight: bold;
      }

      .filter-btn {
        margin: 10px;
      }

      .btn-group {
        margin-bottom: 20px;
      }

      .search-container {
        margin-bottom: 20px;
        position: relative;
        width: 300px;
        margin: 0 auto;
      }

      .search-container input {
        width: 100%;
        padding-left: 35px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        border-radius: 25px;
      }

      .search-container input:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        outline: none;
      }

      .search-container i {
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
        color: #007bff;
        transition: color 0.3s ease;
      }

      .search-container input:focus + i {
        color: #0056b3;
      }
    </style>
  </head>
  <body>
   <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><i class="fas fa-user-graduate" style="color: white;"></i> Student Management</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/"><i class="fas fa-home"></i> Home</a></li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="studentsDropdown" role="button">
              <i class="fas fa-user-graduate"></i> Students
            </a>
            <ul class="dropdown-menu" aria-labelledby="studentsDropdown">
              <li><a class="dropdown-item" href="/students"><i class="fas fa-user-plus"></i> Add Student</a></li>
              <li><a class="dropdown-item" href="/adminLogin"><i class="fas fa-users"></i> View Students</a></li>
            </ul>
          </li>
          <li class="nav-item"><a class="nav-link" href="/contact"><i class="fas fa-envelope"></i> Contact</a></li>
        </ul>
      </div>
    </div>
  </nav>

    <div class="container-fluid text-center">
      <h1>Student Information</h1>
      <div class="search-container">
        <i class="fas fa-search"></i>
        <input
          type="text"
          id="searchInput"
          class="form-control"
          placeholder="Search by ID"
        />
      </div>
      <br>
      <div class="btn-group">
        <button class="btn btn-primary filter-btn btn-icon" id="showAll">
          <i class="fas fa-list"></i> Show All
        </button>
        <button class="btn btn-success filter-btn btn-icon" id="showMale">
          <i class="fas fa-mars"></i> Male
        </button>
        <button class="btn btn-danger filter-btn btn-icon" id="showFemale">
          <i class="fas fa-venus"></i> Female
        </button>
        <button class="btn btn-info filter-btn btn-icon" id="sortById">
          <i class="fas fa-sort-numeric-down"></i> Sort by ID
        </button>
      </div>
      <div class="row justify-content-center">
        <div class="col-auto table-container">
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Sr. No.</th>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Mobile</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">Hobbies</th>
                <th scope="col">Gender</th>
                <th scope="col">Operations</th>
              </tr>
            </thead>
            <tbody id="studentTableBody">
              <% students.forEach(function(student, index) { %>
              <tr data-gender="<%= student.gender %>">
                <td><%= index + 1 %></td>
                <td><strong><%= student.id %></strong></td>
                <td><%= student.name %></td>
                <td><%= student.mobile %></td>
                <td><%= student.address %></td>
                <td><%= student.city %></td>
                <td><%= student.hobbie.join(', ') %></td>
                <td><%= student.gender %></td>
                <td>
                  <a
                    href="/update/<%= student._id %>"
                    class="btn btn-warning btn-sm"
                    title="Update"
                  >
                    <i class="fas fa-edit"></i>
                  </a>
                  <a
                    href="/view/<%= student._id %>"
                    class="btn btn-primary btn-sm"
                    title="View"
                  >
                    <i class="fas fa-eye"></i>
                  </a>
                  <form
                    method="post"
                    action="/delete/<%= student._id %>"
                    style="display: inline"
                  >
                    <button
                      type="submit"
                      class="btn btn-danger btn-sm mt-2"
                      title="Delete"
                    >
                      <i class="fas fa-trash-alt"></i>
                    </button>
                  </form>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
<br><br>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const rows = document.querySelectorAll("tbody tr");
        rows.forEach((row, index) => {
          setTimeout(() => {
            row.classList.add("visible");
          }, index * 600); // Delay for each row (600ms)
        });
      });

      // Sorting function
      document.getElementById('sortById').addEventListener('click', () => {
        const tableBody = document.getElementById('studentTableBody');
        const rows = Array.from(tableBody.querySelectorAll('tr'));
        rows.sort((a, b) => {
          const idA = parseInt(a.querySelector('td:nth-child(2)').textContent);
          const idB = parseInt(b.querySelector('td:nth-child(2)').textContent);
          return idA - idB;
        });
        rows.forEach(row => tableBody.appendChild(row));
      });

      // Filtering function
      document.getElementById('showAll').addEventListener('click', () => {
        const rows = document.querySelectorAll('tbody tr');
        rows.forEach(row => row.style.display = '');
      });

      document.getElementById('showMale').addEventListener('click', () => {
        const rows = document.querySelectorAll('tbody tr');
        rows.forEach(row => {
          if (row.dataset.gender === 'Male') {
            row.style.display = '';
          } else {
            row.style.display = 'none';
          }
        });
      });

      document.getElementById('showFemale').addEventListener('click', () => {
        const rows = document.querySelectorAll('tbody tr');
        rows.forEach(row => {
          if (row.dataset.gender === 'Female') {
            row.style.display = '';
          } else {
            row.style.display = 'none';
          }
        });
      });

      // Search function
      document.getElementById('searchInput').addEventListener('input', function () {
        const searchValue = this.value.toLowerCase();
        const rows = document.querySelectorAll('tbody tr');
        rows.forEach(row => {
          const id = row.querySelector('td:nth-child(2)').textContent.trim();
          if (id.toLowerCase().includes(searchValue)) {
            row.style.display = '';
          } else {
            row.style.display = 'none';
          }
        });
      });
    </script>
  </body>
</html>
